<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <EditTextPreference
        android:key="username"
        android:title="@string/settings_name_label" />
    <PreferenceCategory>
        <ListPreference
            android:key="settings_language"
            android:title="@string/settings_language_label"
            android:entries="@array/languages"
            android:entryValues="@array/languages"/>
        <ListPreference
            android:key="settings_http_method"
            android:title="@string/settings_http_method_label"
            android:entries="@array/http_methods"
            android:entryValues="@array/http_methods"/>
    </PreferenceCategory>
</PreferenceScreen>